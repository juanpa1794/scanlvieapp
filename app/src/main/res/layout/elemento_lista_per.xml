<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="598dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:srcCompat="@drawable/icon_users" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nav_user_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="Nombre"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lbNomMascota"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textSize="20dp" />

                <View android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/separator"
                    android:visibility="visible"
                    android:background="#40A29E"
                    tools:ignore="DuplicateIds" />



                <TextView
                    android:id="@+id/nav_user_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="Acudiente"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/lbNomPropietario"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textSize="20dp" />

                <View android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/separator"
                    android:visibility="visible"
                    android:background="#40A29E"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:text="Direccion"
            android:textSize="15dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/lbDireccion"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:text="TextView"
            android:textSize="20dp" />


        <View android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/separator"
            android:visibility="visible"
            android:background="#40A29E"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Telefono"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lbTelefono"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:text="TextView"
            android:textSize="20dp" />

        <View android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/separator"
            android:visibility="visible"
            android:background="#40A29E"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="EPS o IPS"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lbVacunas"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:text="TextView"
            android:textSize="20dp" />

        <View android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/separator"
            android:visibility="visible"
            android:background="#40A29E"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Notas"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lbNotas"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_margin="5dp"
            android:text="TextView"
            android:textSize="20dp" />

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#40A29E"
            android:visibility="visible"
            tools:ignore="DuplicateIds" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>