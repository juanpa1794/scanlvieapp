<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="402dp"
        android:layout_height="486dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:srcCompat="@drawable/pet_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nav_user_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="Nombre"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lbNomMascota"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/separator"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="#40A29E"
                    android:visibility="visible"
                    tools:ignore="DuplicateIds" />


                <TextView
                    android:id="@+id/nav_user_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="Propietario"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/lbNomPropietario"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/separator"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="#40A29E"
                    android:visibility="visible"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:text="Direccion"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/lbDireccion"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:text="TextView"
            android:textSize="20dp" />


        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#40A29E"
            android:visibility="visible"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Telefono"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbTelefono"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:text="TextView"
            android:textSize="20dp" />

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#40A29E"
            android:visibility="visible"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Vacunas"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbVacunas"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:text="TextView"
            android:textSize="20dp" />

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#40A29E"
            android:visibility="visible"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Notas"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbNotas"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_margin="5dp"
            android:text="TextView"
            android:textSize="20dp" />

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#40A29E"
            android:visibility="visible"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

    <Button

        android:id="@+id/btnWhatsapp"
        android:layout_width="133dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#008577"
        android:drawableLeft="@drawable/whatsappwhite"
        android:drawableTint="@color/colorIcons"
        android:shadowRadius="@android:integer/config_longAnimTime"
        android:text="Chat Familia"
        android:textColor="@color/colorIcons"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.243" />

</androidx.constraintlayout.widget.ConstraintLayout>